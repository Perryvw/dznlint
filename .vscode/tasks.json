{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run dznlint on file",
            "type": "shell",
            "command": "node",
            "args": ["${workspaceFolder}/dist/cli/dznlint.js", "${file}"],
            "group": "build",
            "problemMatcher": {
                "owner": "dzn",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+)-(\\d+):(\\d+)\\s+(hint|warning|error)\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        },
        {
            "label": "Generate parser",
            "type": "npm",
            "script": "generate-parser",
            "group": "build"
        }
    ]
}
