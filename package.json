{
    "name": "dznlint",
    "version": "0.0.9",
    "description": "A linter for Dezyne .dzn files. Providing extra warnings and coding style analysis.",
    "repository": "https://github.com/Perryvw/dznlint",
    "files": [
        "dist/**/*.js",
        "dist/**/*.ts"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "dznlint": "dist/cli/dznlint.js"
    },
    "scripts": {
        "generate-parser": "tspeg src/grammar/dzn-grammar.peg src/grammar/parser.ts",
        "build": "npm run generate-parser && tsc",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.7.0",
        "jest": "^27.4.7",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "tspeg": "^3.2.0",
        "typescript": "^4.5.5"
    }
}
