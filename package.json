{
    "name": "dznlint",
    "version": "0.0.25",
    "description": "A linter for Dezyne .dzn files. Providing extra warnings and coding style analysis.",
    "repository": "https://github.com/Perryvw/dznlint",
    "files": [
        "dist/**/*.js",
        "dist/**/*.ts"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "dznlint": "dist/cli/dznlint.js"
    },
    "scripts": {
        "generate-parser": "tspeg src/grammar/dzn-grammar.peg src/grammar/parser.ts",
        "build": "npm run generate-parser && tsc",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/node": "^20.8.3",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "eslint": "^8.51.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "tspeg": "^3.3.0",
        "typescript": "^5.2.2"
    }
}
